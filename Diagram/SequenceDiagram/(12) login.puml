@startuml User Login (POST)

header Campground Booking System Sequence Diagram
footer Page %page% of %lastpage%
title "User Login (POST)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:auth" as routerAuth
participant "<<controllers>>\n:auth" as controllersAuth
participant "<<model>>\n:User" as modelUser
database "<<MongoDB>>\n:users" as UsersDatabase

client->server ++:req.post('/api/v1/auth/login')
server->routerAuth ++:app.use('/api/v1/auth', auth)

routerAuth -> controllersAuth ++:login()

controllersAuth -> modelUser ++:findOne({email}).select('+password')
modelUser -> UsersDatabase ++: UserSchema
UsersDatabase --> modelUser --: user
controllersAuth <-- modelUser --: user

alt user not found
controllersAuth -> client : response (400, success: false, msg: 'Invalid credentials')
else user found
controllersAuth -> modelUser ++:matchPassword(password)
controllersAuth <-- modelUser --: isMatch

alt password mismatch
    controllersAuth -> client : response (401, success: false, msg: 'Invalid credentials')
else password match
    controllersAuth -> controllersAuth ++:sendTokenResponse(user, 200, res)
    controllersAuth -> modelUser ++:getSignedJwtToken()
    controllersAuth <-- modelUser --: token
    controllersAuth -> client : response (200, success: true, token, cookie)
    deactivate controllersAuth
end
end

@enduml