@startuml Delete Campground (DELETE)

header Campground Booking System Sequence Diagram
footer Page %page% of %lastpage%
title "Delete Campground (DELETE)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:campgrounds" as routerCampgrounds
participant "<<middleware>>\n:auth" as middleware
participant "<<controllers>>\n:campgrounds" as controllersCampgrounds
participant "<<model>>\n:Booking" as modelBooking
participant "<<model>>\n:Campground" as modelCampground
database "<<MongoDB>>\n:campgrounds" as CampgroundsDatabase

client->server ++:req.delete('/api/v1/campgrounds/:id')
server->routerCampgrounds ++:app.use('/api/v1/campgrounds', campgrounds)

routerCampgrounds -> middleware ++:protect()
middleware -> middleware :authorize('admin')
routerCampgrounds <- middleware --:next()

routerCampgrounds -> controllersCampgrounds ++:deleteCampground()
controllersCampgrounds->modelCampground ++:findById(req.params.id)
modelCampground ->CampgroundsDatabase ++: CampgroundSchema
CampgroundsDatabase --> modelCampground --: campground
controllersCampgrounds <-- modelCampground --: campground

alt campground not found
controllersCampgrounds->client :response (400, success: false)
else campground found
controllersCampgrounds->modelBooking ++:deleteMany({ campground: req.params.id })
modelBooking -> CampgroundsDatabase ++: BookingSchema
CampgroundsDatabase --> modelBooking --: success
controllersCampgrounds <-- modelBooking --: success


controllersCampgrounds->modelCampground ++:deleteOne({ _id: req.params.id })
modelCampground -> CampgroundsDatabase ++: CampgroundSchema
CampgroundsDatabase --> modelCampground --: success
controllersCampgrounds <-- modelCampground --: success

controllersCampgrounds->client --:response (200, success: true, data: {})

end

@enduml